<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeActivity">

    <ImageView
        android:id="@+id/bgEmpActivity"
        android:layout_width="436dp"
        android:layout_height="907dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <Button
        android:id="@+id/takeAtt"
        android:layout_width="296dp"
        android:layout_height="93dp"
        android:background="#FCD768"
        android:elevation="10dp"
        android:text="Take attendence"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/giveAtt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/giveAtt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/giveAtt"
        android:layout_width="296dp"
        android:layout_height="93dp"
        android:background="#FCD768"
        android:elevation="10dp"
        android:text="Give Attendence"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="@+id/attSheet"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/attSheet"
        app:layout_constraintTop_toBottomOf="@+id/takeAtt"
        app:layout_constraintVertical_bias="0.017" />

    <Button
        android:id="@+id/attSheet"
        android:layout_width="296dp"
        android:layout_height="93dp"
        android:background="#FCD768"
        android:elevation="10dp"
        android:text="Attendence Sheet"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/leavebtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/leavebtn"
        app:layout_constraintTop_toBottomOf="@+id/giveAtt"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/leavebtn"
        android:layout_width="296dp"
        android:layout_height="93dp"
        android:background="#FCD768"
        android:elevation="10dp"
        android:text="Ask For leave"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attSheet"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/Signout"
        android:layout_width="115dp"
        android:layout_height="64dp"
        android:background="#B4D343"
        android:text="Sign Out"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leavebtn"
        app:layout_constraintVertical_bias="0.421" />

</androidx.constraintlayout.widget.ConstraintLayout>